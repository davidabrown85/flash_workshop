package classes{	import flash.display.MovieClip;	import flash.events.MouseEvent;	import flash.events.KeyboardEvent;	import flash.ui.Keyboard;		public class SlideShow extends MovieClip	{				private var slide_control:SlideControl = new SlideControl();						public function SlideShow():void		{			addChild( slide_control );			slide_control.init( );						stage.addEventListener( MouseEvent.MOUSE_UP, mouseChange );			stage.addEventListener( KeyboardEvent.KEY_UP, keyClicked );		}						private function mouseChange( ev:MouseEvent ):void		{			if( mouseX < stage.stageWidth / 2 )			{				slide_control.pageLeft( );			}			else			{				slide_control.pageRight( );			}					}						private function keyClicked( ev:KeyboardEvent ):void		{			trace( ev.keyCode );						switch( ev.keyCode )			{				case Keyboard.LEFT:				case Keyboard.A:									slide_control.pageLeft( );									break;				case Keyboard.RIGHT:				case Keyboard.SPACE:				case Keyboard.D:									slide_control.pageRight( );									break;			}		}			}}