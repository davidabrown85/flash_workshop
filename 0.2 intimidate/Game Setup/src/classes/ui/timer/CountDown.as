package classes{	import flash.display.MovieClip;	import flash.events.TimerEvent;	import flash.utils.Timer;	import flash.events.Event;			public class CountDown extends MovieClip	{						private var countNum = 0;		private var countMax = 3;		private var theTimer:Timer = new Timer( 1000 );			public function CountDown() 		{ 			gotoAndStop( totalFrames ); 		}				public function start_counter():void		{			gotoAndStop( 1 );						theTimer.addEventListener( TimerEvent.TIMER, update_counter );			theTimer.start();					}				public function stop_counter():void		{			gotoAndStop( totalFrames ); 						theTimer.removeEventListener( TimerEvent.TIMER, update_counter );			theTimer.reset(); theTimer.stop();						countNum = 0;		}				private function update_counter(ev:TimerEvent):void		{						countNum++;						if(countNum < countMax) 			{ 				gotoAndPlay( countNum ); 			}			else 			{ 				dispatchEvent( new Event("countdown_finished") );				gotoAndStop( totalFrames );  				stop_counter();			}		}			}}