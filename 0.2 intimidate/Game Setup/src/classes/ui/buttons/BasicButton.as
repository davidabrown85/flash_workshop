package classes.ui.buttons{		import flash.display.MovieClip;	import flash.events.MouseEvent;	import flash.events.Event;	import flash.text.TextField;		import com.greensock.TweenNano;		public class BasicButton extends MovieClip	{		public var button_vars:Object;				public function BasicButton():void { }						protected function mouseOver( ev:MouseEvent ):void		{			ev.stopPropagation();			if( currentFrame == 1 )				gotoAndStop(2);						}				protected function click( ev:MouseEvent ):void		{			ev.stopPropagation();				gotoAndStop(3);		}		protected function mouseUp( ev:MouseEvent ):void		{			ev.stopPropagation();						gotoAndStop(1);		}						protected function mouseOut( ev:MouseEvent ):void		{			ev.stopPropagation();							if( currentFrame == 2 )				gotoAndStop(1);		}				public function enable():void		{			buttonMode = true;			mouseChildren = false; 			addEventListener( MouseEvent.MOUSE_UP, mouseUp );			addEventListener( MouseEvent.MOUSE_OUT, mouseOut );			addEventListener( MouseEvent.MOUSE_DOWN, click );			addEventListener( MouseEvent.MOUSE_OVER, mouseOver );					}				public function disable():void		{			buttonMode = false;			removeEventListener( MouseEvent.MOUSE_UP, mouseUp );			removeEventListener( MouseEvent.MOUSE_OUT, mouseOut );			removeEventListener( MouseEvent.MOUSE_DOWN, click );			removeEventListener( MouseEvent.MOUSE_OVER, mouseOver );		}				public function cleanUp():void		{			disable();		}	}	}