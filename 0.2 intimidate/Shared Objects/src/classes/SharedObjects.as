package classes{	import flash.display.Sprite;	import flash.events.MouseEvent;	import flash.net.SharedObject;		public class SharedObjects extends Sprite	{		private var shared_object:SharedObject;				public function SharedObjects()		{			button_1.buttonMode = button_2.buttonMode = button_3.buttonMode = button_4.buttonMode = button_5.buttonMode = true;						button_1.addEventListener( MouseEvent.MOUSE_UP, set_button_number );			button_2.addEventListener( MouseEvent.MOUSE_UP, set_button_number );			button_3.addEventListener( MouseEvent.MOUSE_UP, set_button_number );			button_4.addEventListener( MouseEvent.MOUSE_UP, set_button_number );			button_5.addEventListener( MouseEvent.MOUSE_UP, set_button_number );						shared_object = SharedObject.getLocal("key_string", "/");			shared_object.flush();						if( shared_object.data.num )				number_txt.text = shared_object.data.num;		}						private function set_button_number( ev:MouseEvent ):void		{			trace("ev.currentTarget.name: "+ev.currentTarget.name);						switch ( ev.currentTarget.name )			{				case "button_1":								number_txt.text = "1";								break;				case "button_2":								number_txt.text = "2";								break;				case "button_3":								number_txt.text = "3";								break;				case "button_4":								number_txt.text = "4";								break;				case "button_5":								number_txt.text = "5";								break;			}						shared_object.data.num = number_txt.text;		}	}}