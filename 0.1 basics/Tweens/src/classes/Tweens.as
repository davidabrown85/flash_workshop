package classes{	import flash.display.MovieClip;	import flash.display.Sprite;	import flash.events.Event;		import com.greensock.TweenLite;	import com.greensock.easing.*;			public class Tweens extends MovieClip	{		private var ball:Sprite = new Sprite();				public function Tweens() 		{			draw_ball();						addEventListener( Event.ENTER_FRAME, update_tween );		}						private function draw_ball():void		{			ball.graphics.clear();			ball.graphics.beginFill( 0x000000 );			ball.graphics.drawCircle( 0, 0, 25 );						ball.x = stage.stageWidth / 2; 			ball.y = stage.stageHeight / 2;						addChild( ball );		}						private function update_tween( ev:Event ):void		{			//move_mc();			scale_mc();		}						private function move_mc( ):void		{			//http://www.greensock.com/tweenlite/			//http://hosted.zeh.com.br/tweener/docs/en-us/misc/transitions.html						TweenLite.to( ball, .5, { x:mouseX, y:mouseY, ease:Linear.easeNone } );			//TweenLite.to( ball, .5, { x:mouseX, y:mouseY, ease:Back.easeIn } );			//TweenLite.to( ball, .5, { x:mouseX, y:mouseY, ease:Bounce.easeOut } );		}				private function scale_mc( ):void		{			TweenLite.to( ball, .5, { scaleX:mouseX / 100, scaleY:mouseY / 100, ease:Linear.easeNone } );		}	}}