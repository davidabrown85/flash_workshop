package classes{	import flash.display.MovieClip;	import flash.events.Event;	public class HitTest extends MovieClip	{		public function HitTest()		{			addEventListener( Event.ENTER_FRAME, check_collision );			//addEventListener( Event.ENTER_FRAME, check_mouse_collision );			//addEventListener( Event.ENTER_FRAME, check_manual_collision );		}				private function check_collision( ev:Event ):void		{			object2.x = mouseX;			object2.y = mouseY;						if( object2.hitTestObject( object1 ) )			{				object1.gotoAndStop(2);			}			else			{				object1.gotoAndStop(1);			}		}						private function check_mouse_collision( ev:Event ):void		{			if( object2.hitTestPoint( mouseX, mouseY, true ) )			{				object2.gotoAndStop(2);			}			else			{				object2.gotoAndStop(1);			}		}						private function check_manual_collision( ev:Event ):void		{			object2.x = mouseX;			object2.y = mouseY;						if( object2.x - ( object2.width / 2 ) < object1.x + ( object1.width / 2 ) &&  object2.x + ( object2.width / 2 ) > object1.x - ( object1.width / 2 ) 			&& object2.y - ( object2.height / 2 ) < object1.y + ( object1.height / 2 ) &&  object2.y + ( object2.height / 2 ) > object1.y - ( object1.height / 2 )  )		   	{				object1.gotoAndStop(2);		   	}			else			{				object1.gotoAndStop(1);			}		   		}	}}