package classes {	import flash.display.MovieClip;	import flash.events.Event;		public class EyeBall extends MovieClip {		public function EyeBall() {			addEventListener( Event.ENTER_FRAME, eyesFollow );			// constructor code		}		private function eyesFollow( ev:Event ):void		{		 	var dist_x:int = mouseX - eye_ball1.x;			var dist_y:int = mouseY - eye_ball1.y;			var mouse_angle:Number = Math.atan2( dist_y, dist_x );						var max_dist:int = ( eye_ball1.width / 2 ) - ( eye_pupil1.width / 2 );						var pupil_x:int = ( Math.abs( dist_x ) < max_dist )? Math.abs( dist_x ) : max_dist;			var pupil_y:int = ( Math.abs( dist_y ) < max_dist )? Math.abs( dist_y ) : max_dist;						eye_pupil1.x = eye_ball1.x + pupil_x * Math.cos( mouse_angle );			eye_pupil1.y = eye_ball1.y + pupil_y * Math.sin( mouse_angle );		}	}	}