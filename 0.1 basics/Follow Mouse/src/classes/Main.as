package classes{	import flash.display.MovieClip;	import flash.events.MouseEvent;	import flash.events.Event;	import flash.ui.Mouse;	import com.greensock.TweenLite;	public class Main extends MovieClip	{		public function Main()		{						Mouse.hide();			addEventListener( Event.ENTER_FRAME, mouseFollow );			//addEventListener( Event.ENTER_FRAME, tweenFollow );			//addEventListener( Event.ENTER_FRAME, eyesFollow );		}		private function mouseFollow( ev:Event ):void		{			eye_pupil1.x = mouseX;			eye_pupil1.y = mouseY;		}						private function tweenFollow( ev:Event ):void		{			TweenLite.to( eye_pupil1, .5, { x:mouseX, y:mouseY } );		}				private function eyesFollow( ev:Event ):void		{		 	var dist_x:int = mouseX - eye_ball1.x;			var dist_y:int = mouseY - eye_ball1.y;			var mouse_angle:Number = Math.atan2( dist_y, dist_x );						var max_dist:int = ( eye_ball1.width / 2 ) - ( eye_pupil1.width / 2 );						var pupil_x:int = ( Math.abs( dist_x ) < max_dist )? Math.abs( dist_x ) : max_dist;			var pupil_y:int = ( Math.abs( dist_y ) < max_dist )? Math.abs( dist_y ) : max_dist;						eye_pupil1.x = eye_ball1.x + pupil_x * Math.cos( mouse_angle );			eye_pupil1.y = eye_ball1.y + pupil_y * Math.sin( mouse_angle );		}	}}