package classes{	import flash.display.MovieClip;	import flash.events.MouseEvent;	public class Main extends MovieClip	{		public function Main()		{			the_button.buttonMode = true;			the_button.mouseChildren = false;						enable_button();		}				private function btnOver( ev:MouseEvent ):void		{			the_button.gotoAndStop("over");			the_button.btn_txt.text = "over";		}		private function btnOut( ev:MouseEvent ):void		{			the_button.gotoAndStop("normal");			the_button.btn_txt.text = "normal";		}		private function btnDown( ev:MouseEvent ):void		{			the_button.gotoAndStop("down");			the_button.btn_txt.text = "down";			the_button.startDrag();		}		private function btnUp( ev:MouseEvent ):void		{			the_button.gotoAndStop("over");			the_button.btn_txt.text = "over";			the_button.stopDrag();		}		public function disable_button():void		{			the_button.gotoAndStop("normal");			the_button.btn_txt.text = "normal";			the_button.mouseEnabled = false;			the_button.removeEventListener( MouseEvent.MOUSE_OVER, btnOver );			the_button.removeEventListener( MouseEvent.MOUSE_OUT, btnOut );			the_button.removeEventListener( MouseEvent.MOUSE_DOWN, btnDown );			the_button.removeEventListener( MouseEvent.MOUSE_UP, btnUp );		}		public function enable_button():void		{			the_button.mouseEnabled = true;			the_button.addEventListener( MouseEvent.MOUSE_OVER, btnOver );			the_button.addEventListener( MouseEvent.MOUSE_OUT, btnOut );			the_button.addEventListener( MouseEvent.MOUSE_DOWN, btnDown );			the_button.addEventListener( MouseEvent.MOUSE_UP, btnUp );		} 	}}