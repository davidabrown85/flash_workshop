package classes {	import flash.display.MovieClip;	import flash.events.KeyboardEvent;	import flash.ui.Keyboard;	public class Main extends MovieClip	{		public function Main() 		{ 			stage.addEventListener( KeyboardEvent.KEY_DOWN, keyPressedOne );			//stage.addEventListener( KeyboardEvent.KEY_DOWN, keyPressedOne );		}		private function keyPressedTwo( ev:KeyboardEvent ):void		{			keycode_text.text = String( ev.keyCode );						var player_angle:Number;			var player_x:int;			var player_y:int;						switch( ev.keyCode )			{				case Keyboard.LEFT:					the_player.rotation -= 10;					break;				case Keyboard.RIGHT:					the_player.rotation += 10;					break;				case Keyboard.UP:					player_angle = the_player.rotation / (180 / Math.PI);					the_player.x = the_player.x + 10 * Math.cos( player_angle );					the_player.y = the_player.y + 10 * Math.sin( player_angle );					break;				case Keyboard.DOWN:					player_angle = the_player.rotation / (180 / Math.PI);					the_player.x = ( the_player.x + 10 * Math.cos( player_angle ) ) * -1;					the_player.y = ( the_player.y + 10 * Math.sin( player_angle ) ) * -1;					break;			}		}		private function keyPressedOne( ev:KeyboardEvent ):void		{			keycode_text.text = String( ev.keyCode );						switch( ev.keyCode )			{				case Keyboard.LEFT:					the_player.x -= 10;					break;				case Keyboard.RIGHT:					the_player.x += 10;					break;				case Keyboard.UP:					the_player.y -= 10;					break;				case Keyboard.DOWN:					the_player.y += 10;					break;			}		}	}}