package classes{	import flash.display.MovieClip;	import flash.events.MouseEvent;	import flash.events.Event;		import com.greensock.TweenLite;	import com.greensock.easing.*;	public class Main extends MovieClip	{		private var enemy_control:EmenyControl = new EmenyControl();		private var previous_x:int; 		public function Main()		{			addEventListener( Event.ENTER_FRAME, update );			stage.addEventListener( MouseEvent.MOUSE_UP, shoot );			addChild( enemy_control );			enemy_control.create_level( 1 );					}						private function update( ev:Event ):void		{			TweenLite.to( the_player, .5, { x:mouseX, ease:Linear.easeNone } );						previous_x = the_player.x;		}						private function shoot( ev:MouseEvent ):void		{			var new_button:Bullet = new Bullet();			addChild( new_button );			new_button.start_bullet( the_player.x, the_player.y, mouseX, mouseY, the_player.x - previous_x );		}				/*private function add_enemy( ev:Event ):void		{			var new_enemy:Enemy;						if( Math.random() < .1 )			{				if( Math.random() < .5 )				{					new_enemy = new BigBob();				}				else				{					new_enemy = new SmallSam();				}								addChild( new_enemy );				new_enemy.create_enemy();				new_enemy.addEventListener( "finished", remove_enemy );			}		}				private function remove_enemy( ev:Event ):void		{			removeChild( Enemy( ev.target ) );		}*/	}}