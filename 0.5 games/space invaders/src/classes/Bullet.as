package classes{	import flash.display.MovieClip;	import flash.events.MouseEvent;	import flash.events.Event;		import com.greensock.TweenLite;	import com.greensock.easing.*;			public class Bullet extends MovieClip	{		private var fire_angle:Number;		private var fire_speed:int = 10;		private var init_vel:int;		public function Bullet()		{					}				public function start_bullet( start_x:int, start_y:int, aim_x:int, aim_y:int, initial_vel:int ):void		{			x = start_x;			y = start_y;			init_vel = initial_vel;					 	var dist_x:int = aim_x - start_x;			var dist_y:int = aim_y - start_y;						fire_angle = Math.atan2( dist_y, dist_x );						rotation = fire_angle * (180 / Math.PI);						addEventListener( Event.ENTER_FRAME, update );		}						public function update( ev:Event ):void		{			x += ( Math.cos( fire_angle ) * fire_speed ) + init_vel;				y += Math.sin( fire_angle ) * fire_speed;		}	}}